{
  "manifest_version": 3,
  "name": "To-Duck List",
  "version": "1.0",
  "description": "A simple task management Chrome extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_badge_text": "0"
  },
  "permissions": [
    "storage",
    "action"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 